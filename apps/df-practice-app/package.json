{
  "name": "@df/df-practice-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "dev": "vite",
    "preview": "vite preview --host 127.0.0.1 --port 4174",
    "serve": "vite",
    "start:test": "pnpm build && vite dev --host 127.0.0.1 --port 4174 --strictPort --mode test --logLevel error",
    "pretest": "pnpm build",
    "test": "pnpm test:integration",
    "test:integration": "playwright test --config ../../playwright.config.ts --project=df-practice-app"
  },
  "dependencies": {
    "@df/state": "workspace:*",
    "@df/ui-lit": "workspace:*",
    "@lit-labs/signals": "^0.1.0",
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "typescript": "^5.9.2",
    "vite": "^5.4.10"
  }
}
